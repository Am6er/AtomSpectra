<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="buttonStyle">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:colorBackground">@color/colorButtonBackground</item>
        <item name="android:colorButtonNormal">@color/colorButtonBackground</item>
    </style>

    <style name="layoutStyle" parent="android:Theme.DeviceDefault">
        <item name="android:background">@color/colorEmpty</item>
    </style>

    <style name="textViewStyle" parent="android:Theme.DeviceDefault">
        <item name="android:background">@color/colorEmpty</item>
    </style>

    <style name="alertDialogStyle" parent="android:Theme.DeviceDefault">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">@color/colorButtonText</item>
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <style name="actionBarTextStyle" parent="android:Widget.ActionBar.TabText">
        <item name="titleTextColor">@color/colorMenuText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actionAtomBarStyle" parent="android:Theme.DeviceDefault">
<!--        <item name="actionBarSize">30sp</item>
        <item name="android:textSize">22sp</item>  -->
        <item name="titleTextStyle">@style/actionBarTextStyle</item>
        <item name="background">@color/colorMenuAppearance</item>
    </style>
